@* @model IndiaLivings_Web_UI.Models.UserViewModel *@

@{
    UserViewModel userObj = Context.Session.GetObject<UserViewModel>("UserDetails");
}
<style>
    /* Style for the container */
    .user-details {
        font-family: Arial, sans-serif; /* Font for the whole section */
        margin: 20px; /* Space around the section */
        padding: 10px; /* Padding inside the container */
        background-color: #f9f9f9; /* Light background */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    /* Style for the list */
    .dash-meta {
        list-style: none; /* Remove bullet points */
        padding: 0; /* Remove padding */
        margin: 0; /* Remove margin */
    }

        /* Style for each list item */
        .dash-meta li {
            display: flex; /* Flexbox for horizontal alignment */
            align-items: center; /* Vertically center the content */
            margin-bottom: 10px; /* Space between list items */
        }

            /* Style for the icons */
            .dash-meta li i {
                font-size: 1.5rem; /* Larger icon size */
                color: #2a9d8f; /* Icon color */
                margin-right: 10px; /* Space between icon and text */
            }

            /* Style for the text (phone number, email, address) */
            .dash-meta li span {
                font-size: 1.1rem; /* Slightly larger text */
                color: #333; /* Darker text color */
                font-weight: 600; /* Bold text */
            }

</style>

<div class="row">
    <div class="col-lg-5">
        <div class="dash-header-left">
            <div class="dash-avatar">
                <a href="#"><img src="@Context.Session.GetString("UserImage")" alt="avatar"></a>
            </div>
            <div class="dash-intro">
                <h4><a href="#">@userObj.username</a></h4>                
                <h5>new seller</h5>

                @* <ul class="dash-meta">
                    <li>
                        <i class="fas fa-phone-alt"></i>
                        <span>@userObj.userMobile</span>
                    </li>
                    <li>
                        <i class="fas fa-envelope"></i>
                        <span>@userObj.userEmail</span>
                    </li>
                    <li>
                        <i class="fas fa-map-marker-alt"></i>
                        <span>@userObj.userFullAddress</span>
                    </li>
                </ul> *@
                <div class="user-details">
                <ul class="dash-meta">
                    <li>
                        <i class="fas fa-phone-alt"></i>
                        <span>@userObj.userMobile</span>
                    </li>
                    <li>
                        <i class="fas fa-envelope"></i>
                        <span>@userObj.userEmail</span>
                    </li>
                    <li>
                        <i class="fas fa-map-marker-alt"></i>
                        <span>@userObj.userFullAddress</span>
                    </li>
                </ul>
             </div>
            </div>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="dash-header-right">
            <div class="dash-focus dash-list">
                <h2>0</h2>
                <p>listing ads</p>
            </div>
            <div class="dash-focus dash-book">
                <h2>0</h2>
                <p>total follower</p>
            </div>
            <div class="dash-focus dash-rev">
                <h2>0</h2>
                <p>total review</p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="dash-header-alert alert fade show">
            <p>From your account dashboard. you can easily check & view your recent orders, manage your shipping and billing addresses and Edit your password and account details.</p>
            <button data-dismiss="alert"><i class="fas fa-times"></i></button>
        </div>
    </div>
</div>

@{
    int currentUserId = Context.Session.GetInt32("UserId") ?? 0;
    var receiver = ((IEnumerable<MessageViewModel>)Model.Messages)
        .FirstOrDefault(m => m.SenderId != currentUserId.ToString())?.SenderId
        ?? ((IEnumerable<MessageViewModel>)Model.Messages)
        .FirstOrDefault(m => m.ReceiverId != currentUserId.ToString())?.ReceiverId;
    var receiverUser = (UserViewModel)Model.UserData;
}

<section>
    <div class="message-inbox">
        <div class="inbox-header">
            <div class="inbox-header-profile">
                <a class="inbox-header-img" href="#">
                    <img src="@((receiverUser?.byteUserImageData != null && receiverUser.byteUserImageData.Length > 0
                                                                 ? $"data:image/png;base64,{Convert.ToBase64String(receiverUser.byteUserImageData)}"
                                                                 : "/images/user.png"))">
                </a>
                <div class="inbox-header-text">
                    <h5>
                        <a href="#">
                            @(string.IsNullOrWhiteSpace($"{receiverUser?.userFirstName} {receiverUser?.userMiddleName} {receiverUser?.userLastName}".Trim())
                                                        ? receiverUser?.username
                                                        : $"{receiverUser?.userFirstName} {receiverUser?.userMiddleName} {receiverUser?.userLastName}".Trim())
                        </a>
                    </h5>
                    <span>active now</span>
                </div>
            </div>
            <ul class="inbox-header-list">
                <li><a href="/User/DeleteUserMessage" title="Delete" class="fas fa-trash-alt"></a></li>
                <li><a href="#" title="Report" class="fas fa-flag"></a></li>
                <li><a href="#" title="Block" class="fas fa-shield-alt"></a></li>
            </ul>
        </div>
        <ul class="inbox-chat-list message-list" id="chatMessageList">
            @foreach (var msg in ((IEnumerable<MessageViewModel>)Model.Messages).OrderBy(m => m.Timestamp))
            {
                bool isMine = msg.SenderId == currentUserId.ToString();
                <li class="inbox-chat-item @(isMine ? "my-chat" : "")">
                    <div class="inbox-chat-img">
                        <img src="@(isMine 
                                    ? ((Context.Session.GetObject<byte[]>("UserImage") != null && Context.Session.GetObject<byte[]>("UserImage").Length > 0) 
                                        ? $"data:image/png;base64,{Convert.ToBase64String(Context.Session.GetObject<byte[]>("UserImage"))}" 
                                        : "/images/user.png") 
                                    : (receiverUser?.byteUserImageData != null && receiverUser.byteUserImageData.Length > 0 
                                        ? $"data:image/png;base64,{Convert.ToBase64String(receiverUser.byteUserImageData)}" 
                                        : "/images/user.png"))">
                    </div>
                    <div class="inbox-chat-content">
                        <div class="inbox-chat-text">
                            <p>@msg.text</p>
                            <div class="inbox-chat-action">
                                <a onclick="DeleteMessage('@msg.Id', '@(isMine? msg.SenderId: msg.ReceiverId)', '@msg.ReceiverId', '@receiverUser.username')" title="Remove" class="fas fa-trash-alt"></a>
                                <a href="#" title="Forward" class="fas fa-forward"></a>
                            </div>
                        </div>
                        <small class="inbox-chat-time">@msg.Timestamp.ToString("MMM dd, h:mm tt")</small>
                    </div>
                </li>
            }
        </ul>

        <input type="hidden" id="receiverId" value="@ViewBag.UserID" />

        <div class="inbox-chat-form">
            <textarea placeholder="Type a Message" id="chat-emoji"></textarea>
            <button type="button" id="sendBtn" style="border-color:blue; border-width:2px;"><i class="fas fa-paper-plane"></i></button>
        </div>
    </div>
</section>
<script>
    const scrollToBottom = () => {
                const list = document.getElementById("chatMessageList");
                if (list) {
                    list.scrollTop = list.scrollHeight;
                }
            };
    setTimeout(scrollToBottom, 100);

    function DeleteMessage(messageId, userId, refreshId, username){
        $.ajax({
            url: '/User/DeleteUserMessage',
            type: 'POST',
            data: {messageId: messageId, userId: userId},
            success: function(response) {
                if (response.includes("deleted")) {
                    loadMessages(refreshId, username)
                }
            }
        });
    }
</script>
<ul class="message-list">
    @foreach (var user in Model)
    {
        <li class="message-item">
            <a href="/User/GetMessagesByUser/@Context.Session.GetInt32("UserId")/@user.userID/@user.username" class="message-link" data-receiveruserid="@user.userID" data-username="@user.username">
                <div class="message-img">
                    <img src="@(user.byteUserImageData != null ? $"data:image/png;base64,{Convert.ToBase64String(user.byteUserImageData)}" : Url.Content("~/images/user.png"))" alt="avatar">
                </div>
                <div class="message-text">
                    <h6>@(string.IsNullOrEmpty(user.userFirstName) ? user.username : user.userFirstName)</h6>
                    <p>@user.messageText</p>
                </div>
                @if (user.UnreadCount > 0)
                {
                    <span class="message-count">@user.UnreadCount</span>
                }
            </a>
        </li>
    }
</ul>
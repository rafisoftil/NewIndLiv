@model List<CategoryViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/custom/category-list.css">
    <!--=====================================
                CSS LINK PART END
    =======================================-->
</head>
<body>

    <!--=====================================
              SINGLE BANNER PART START
    =======================================-->
    <section class="inner-section single-banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-content">
                        <h2>category list</h2>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="Dashboard" asp-controller="Dashboard">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">category-list</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--=====================================
              SINGLE BANNER PART END
    =======================================-->
    <!--=====================================
                CATEGORY PART START
    =======================================-->
    <section class="inner-section category-part">
        <div class="container">
            <div class="row">
                @for (var i = 0; i < Model.Count; i++)
                {
                    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3">
                        <div class="category-card">
                            <div class="category-head">
                                <img src="@Model[i].CategoryImage" alt="Category" onerror="this.onerror=null; this.src='/images/no-image.png';" />
                                <a href="javascript: void(0)" onclick="navigateToAdsListWithCategory('@Model[i].CategoryID','0')" class="category-content">
                                    <h4>@Model[i].CategoryName</h4>
                                    <p>(@Model[i].CategoryCount)</p>
                                </a>
                            </div>
                            @foreach (var subCategory in Model[i].subCategories)
                            {
                                <ul class="category-list">
                                    <li><a href="javascript:void(0)" onclick="navigateToAdsListWithCategory('@subCategory.intCategoryID', '@subCategory.subCategoryID')"><h6>@subCategory.subCatergoryName</h6><p>(@subCategory.intSubCategoryCount)</p></a></li>
                                </ul>
                            }
                        </div>
                    </div>
                }
            </div>
            @* <div class="row">
                <div class="col-lg-12">
                    <div class="center-20">
                        <a href="#" class="btn btn-inline">
                            <i class="fas fa-eye"></i>
                            <span>show more categories</span>
                        </a>
                    </div>
                </div>
            </div> *@
        </div>
    </section>
    <!--=====================================
                CATEGORY PART END
    =======================================-->
    <section class="intro-part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-center-heading">
                        <h2>Do you have something to advertise?</h2>
                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit aspernatur illum vel sunt libero voluptatum repudiandae veniam maxime tenetur.</p>
                        <a href="@Url.Action("PostAd", "User")" class="btn btn-outline">
                            <i class="fas fa-plus-circle"></i>
                            <span>post your ad</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="price-part">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-center-heading">
                        <h2>Best Reliable Pricing Plans</h2>

@{
    ViewBag.Title = "Home";
    var recommendedAds = (List<ProductViewModel>)Model.RecommendedAds;
    List<int> wishlistIds = ViewBag.WishlistIds ?? new List<int>();
}
<section class="banner-part">
    <div class="container">
        <div class="banner-content">
            <h1>You can #Buy, #Rent, #Booking anything from here.</h1>
            <p>Buy and sell everything from used cars to mobile phones and computers, or search for property, jobs and more in the world.</p>
            <a href="@Url.Action("AdsList", "Dashboard")" class="btn btn-outline">
                <i class="fas fa-eye"></i>
                <span>Show all ads</span>
            </a>
        </div>
    </div>
</section>

<section class="suggest-part">
    <div class="container">

        <div class="suggest-slider slider-arrow">
            @foreach (var category in Model.Categories)
            {
                if (@category.CategoryCount > 0)
                {
                    <a href="javascript:void(0);" onclick="navigateToAdsListWithCategory(@category.CategoryID)" class="suggest-card">

                        <img class="slide-show" src=@category.CategoryImage alt="@category.CategoryName" onerror="this.onerror=null; this.src='/images/default-category.jpg';" />
                        <h6>@category.CategoryName</h6>
                        <p>@("(" + category.CategoryCount + ") ads")</p>
                    </a>
                }
            }
        </div>
    </div>

</section>

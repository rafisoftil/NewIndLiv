            <div class="col-md-7 col-lg-7">
                <div class="feature-card-slider slider-arrow">
                    @foreach (var product in recommendedAds)
                    {
                        <div class="feature-card">
                            <a href="#" class="feature-img">
                                <img src="data:image/png;base64,@Convert.ToBase64String(product.byteProductImageData)" onerror="this.onerror=null; this.src='/images/white-screen.jpg';" alt="feature" width="565" height="401" />

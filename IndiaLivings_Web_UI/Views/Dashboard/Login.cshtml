@{
    ViewBag.Title = "User Form";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - India_Leavings</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- FAVICON -->
    <link rel="icon" href="images/favicon.png">
    <!-- FONTS -->
    <link rel="stylesheet" href="~/fonts/flaticon/flaticon.css" />
    <link rel="stylesheet" href="~/fonts/font-awesome/fontawesome.css" />
    <link rel="stylesheet" href="~/css/custom/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom/user-form.css">
    <script src="~/js/custom/login.js"></script>
</head>
<body>
<!--=====================================
                USER-FORM PART START
    =======================================-->
    <section class="user-form-part">
        <div class="user-form-banner">
            <div class="user-form-content">
                <a href="#"><img src="/images/logo.png" alt="logo"></a>
                <h1>Advertise your assets <span>Buy what are you needs.</span></h1>
                <p>Biggest Online Advertising Marketplace in the World.</p>
            </div>
        </div>
        <div class="user-form-category">
            <div class="user-form-header">
                <a href="#"><img src="/images/logo.png" alt="logo"></a>
                <a href="/"><i class="fas fa-arrow-left"></i></a>
            </div>
            <div class="user-form-category-btn">
                <ul class="nav nav-tabs">
                    <li>
                        <a href="#login-tab" aria-controls="login-tab" class="nav-link active" role="tab" data-toggle="tab">Sign in</a>
                    </li>
                    <li>
                        <a href="#register-tab" aria-controls="register-tab" class="nav-link" role="tab" data-toggle="tab">Sign up</a>
                    </li>
                </ul>
            </div>
            <div class="tab-pane active" id="login-tab">
                <div class="user-form-title">
                    <h2>Welcome!</h2>
                    <p>Use credentials to access your account.</p>
                </div>
                <form id="loginForm" asp-action="Login" asp-controller="Dashboard" method="post">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <input type="text" class="form-control"
                                       placeholder="Phone number or Email" id="userName"
                                       name="userName" autocomplete="off" />
                                <small id="userNameError" class="text-danger" style="display:none;">
                                    User Name is Required
                                </small>
                                @* <small class="form-alert">Kindly use this format: +91 xxxxxxxxxx or username@gmail.com.</small> *@
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group d-flex">
                                <input type="password" class="form-control" placeholder="Password" id="password" name="password" />
                                <div id="toggle_Signin_pswd" class="form-icon" onclick="fn_toggle_pswd('password','toggle_Signin_pswd');"><i class="eye fas fa-eye-slash"></i></div>
                            </div>
                            <div>
                                <small id="passwordError" class="text-danger" style="display:none;">
                                    Password is Required
                                </small>
                            </div>
                            @* <small class="form-alert">Password must be 6 characters</small> *@

                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="signin-check">
                                    <label class="custom-control-label" for="signin-check">Remember me</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group text-right">
                                <a href="#" class="form-forgot">Forgot password?</a>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <button type="button" class="btn btn-inline" onclick="Validate_User()">
                                    <i class="fas fa-unlock"></i>
                                    <span>Enter your account</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="user-form-direction">
                    <p>Don't have an account? click on the <span style="cursor: pointer" onclick="sign_up_tab()"> ( sign up ) </span> button above.</p>
                </div>
            </div>

            <div class="tab-pane" id="register-tab">
                <div class="user-form-title">
                    <h2>Register</h2>
                    <p>Setup a new account in a minute.</p>
                </div>
                <form>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <input type="text" id="userSignUp" name="userSignUp" onchange="checkDuplicate()"
                                       class="form-control" placeholder="Enter Phone Number or Email" />
                                <small id="userSignUpError" style="display:none;" class="text-danger">
                                    Please Enter Unique User Name
                                </small>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password must be 6 characters"
                                       id="passwordSignUp" name="passwordSignUp" />
                                <div id="toggle_signuppswd" class="form-icon" onclick="fn_toggle_pswd('passwordSignUp','toggle_signuppswd');"><i class="eye fas fa-eye-slash"></i></div>                                
                                <small id="passwordSignUpError" class="text-danger" style="display:none;">
                                    Password is Required
                                </small>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Confirm your password"
                                       id="confirmPassword" name="confirmPassword" />
                                <div type="toggle_signupconfpswd" class="form-icon" onclick="fn_toggle_pswd('confirmPassword','toggle_signupconfpswd');"><i class="eye fas fa-eye-slash"></i></div>                  
                                <small id="confirmPasswordError" class="text-danger" style="display:none;">
                                    Password did not match
                                </small>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="signup-check" name="signup-check">
                                    <label class="custom-control-label" for="signup-check">I agree to the all <a href="#">terms & conditions</a> of IndiaLivings.</label> 
                                </div>
                                <small id="checkboxError" class="text-danger" style="display:none;">
                                    Please tick the checkbox
                                </small>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <button type="button" class="btn btn-inline" onclick="AddUser()">
                                    <i class="fas fa-user-check"></i>
                                    <span>Create new account</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="user-form-direction">
                    <p>Already have an account? click on the <span style="cursor: pointer" onclick="sign_in_tab()">( sign in )</span> button above.</p>
                </div>
            </div>
        </div>
        <div id="toast-container"></div>
        <div id="spinner" class="d-none">
            <img style="height: 100px" src="~/images/spinner.gif" />
        </div>
    </section>
    
    <!--=====================================
                USER-FORM PART END
    =======================================-->
</body>
</html>
<!--=====================================
            JS LINK PART START
=======================================-->
<!-- FOR BOOTSTRAP -->
<script src="~/js/vendor/jquery-1.12.4.min.js"></script>
<script src="~/js/vendor/popper.min.js"></script>
<script src="~/js/vendor/bootstrap.min.js"></script>

<!-- FOR INTERACTION -->
<script src="~/js/custom/main.js"></script>
<!--=====================================
            JS LINK PART END
=======================================-->

<script type="text/javascript">

    $(document).ready(function () {
        $("input").on("focus input", function () {
            $("small").hide();
        });
    });

    function sign_in_tab() {
         $('.nav-link').removeClass('active');
         $('.tab-pane').removeClass('active');

         $('#sign-in').addClass('active');
         $('#login-tab').addClass('active');
    }

     function sign_up_tab() {
         $('.nav-link').removeClass('active');
         $('.tab-pane').removeClass('active');

         $('#sign-up').addClass('active');
         $('#register-tab').addClass('active !important');
     }

    // Login the User
    function Validate_User() {
        $("#userNameError").hide();
        $("#passwordError").hide();
        if (!$("#userName").val()) {
            $("#userNameError").show();

        } else if (!$("#password").val()) {
            $("#passwordError").show();
        }
        else{
            $("#userNameError").hide();
            $("#passwordError").hide();
            $("#spinner").removeClass('d-none');

            var data = {
                userName: $("#userName").val(),
                Password: $("#password").val()
            };
            $.ajax({
                type: "POST",
                url: '@Url.Action("Login", "Dashboard")',
                data: {
                    userName: $("#userName").val(),
                    Password: $("#password").val()
                },
                success: function (response) {

                    if (response.statusCode == 200) {
                        if (response.userId) {
                            window.location.href = '@Url.Action("Dashboard", "Dashboard")';
                        }
                        else {
                            showToast('Invalid Credentials.', 'error');
                        }
                        $("#spinner").addClass('d-none');
                    }
                },
                error: function (error) {
                    $("#spinner").addClass('d-none');

                    showToast('Something went wrong. Please contact your Admin.', 'warning');
                }

            });

        }
    }
    // bool userExists=false;
    // bool passwordValid = false;

    function checkDuplicate() {
        if ($("#userSignUp").val() != null || $("#userSignUp").val() != "") {
            $("#spinner").removeClass('d-none');
            $.ajax({
                type: "POST",
                url: '@Url.Action("verifyUserName", "Dashboard")',
                data: {
                    userName: $("#userSignUp").val()
                },
                success: function (response) {

                    if (response.statusCode == 200) {
                        if (response.isExist) {
                            showToast('User Name already exists', 'error');
                            $("#userSignUp").val("");
                        }
                        $("#spinner").addClass('d-none');
                    }
                },
                error: function (error) {
                    $("#spinner").addClass('d-none');

                    showToast('Something went wrong. Please contact your Admin.', 'warning');
                }

            });
        }

    }

    function comparePassword() {

    }

    /// Password Icon toggle event
    function fn_toggle_pswd(id) {
        if ($("#"+id).attr('type') === 'password')
            $("#"+id).attr('type', 'text');
        else if ($("#" + id).attr('type') === 'text')
        $("#" + id).attr('type', 'password');
        $("#" + id).focus();

    }
    function showToast(message, type) {

        var toast = document.getElementById("toast-container");

        // Ensure newlines are properly converted to HTML breaks
        message = message.replace(/\n/g, '<br />');

        if (type == "success") {
            toast.className = "toast_success";
        }
        else if (type == "error") {
            toast.className = "toast_failed";

        }
        else if(type=="warning"){
            toast.className = "toast_warning";
        }

        toast.innerHTML = message;
        document.body.appendChild(toast);


        toast.style.display = "block";
        // Automatically remove the toast after 3 seconds
        setTimeout(function () {
            toast.style.display = "none";
        }, 3000);
    }

    function AddUser() {
        if ($("#userSignUp").val() == null || $("#userSignUp").val() == "") {
            $("#userSignUpError").show();
        }
        else if ($("#passwordSignUp").val() == null || $("#passwordSignUp").val() == "") {
            $("#passwordSignUpError").text("Password is required");
            $("#passwordSignUpError").show();
        }
        else if ($("#passwordSignUp").val().length < 6) {
            $("#passwordSignUpError").text("Password must be 6 characters long");
            $("#passwordSignUpError").show();
        }
        else if ($("#passwordSignUp").val() != $("#confirmPassword").val() == null) {
            $("#confirmPasswordError").show();
        }
        else if (!$("#signup-check").is(':checked')) {
            $("#checkboxError").show();
        }
        else {
            $("#spinner").removeClass('d-none');
            $.ajax({
                type: "POST",
                url: '@Url.Action("RegisterUser", "Dashboard")',
                data: {
                    userName: $("#userSignUp").val(),
                    Password: $("#passwordSignUp").val()
                },
                success: function (response) {
                    if (response.statusCode == 200) {
                        showToast('Registration completed Successfully. Please login for further actions', 'success');
                    }
                    else {
                        showToast('Something went wrong. Please contact your Administrator', 'error');
                    }
                    $("#spinner").addClass('d-none');
                },
                error: function (error) {
                    $("#spinner").addClass('d-none');

                    showToast('Something went wrong. Please contact your Admin.', 'warning');
                }

            });
        }

    }
</script>
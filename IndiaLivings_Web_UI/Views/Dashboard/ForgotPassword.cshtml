@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - India_Leavings</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/India_Leavings_Web_UI.styles.css" asp-append-version="true" /> *@
    <!-- FAVICON -->
    <link rel="icon" href="images/favicon.png">

    <!-- FONTS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMMb12QKmrCGLR7IxJ6kvTEh8P5F06IMj6mvZ0d" crossorigin="anonymous">
    <link rel="stylesheet" href="~/fonts/flaticon/flaticon.css" />
    <link rel="stylesheet" href="~/fonts/font-awesome/fontawesome.css" />
    <link rel="stylesheet" href="~/css/custom/main.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/css/vendor/bootstrap.min.css" /> *@
</head>
<body>
    <div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModalLabel" aria-hidden="false">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="forgotPasswordModalLabel">Forgot Password</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="SendEmail" asp-controller="Dashboard" method="post" id="otpForm">

                        <!-- OTP Input Section -->
                        @* <div id="otpInputSection">
                            <div class="form-group">
                                <label for="Otp">Enter the OTP sent to your email:</label>
                                <input type="text" name="otp" id="Otp" class="form-control" placeholder="Enter OTP" required />
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-success" id="verifyOtpButton">Verify OTP</button>
                            </div>
                        </div> *@

                        <!-- Password Reset Section (Initially Hidden) -->
                        <div id="passwordResetSection">
                            <div class="form-group">
                                <label for="NewPassword">New Password:</label>
                                <input type="password" name="newPassword" id="NewPassword" class="form-control" placeholder="New Password" />
                                <div id="toggle_newpswd" class="form-icon mt-4" onclick="fn_toggle_pswd('NewPassword','toggle_newpswd');"><i class="eye fas fa-eye-slash"></i></div>
                                <small id="newPasswordError" style="display: none; color: red"></small>
                            </div>
                            <div class="form-group">
                                <label for="ConfirmPassword">Confirm Password:</label>
                                <input type="password" name="confirmPassword" id="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                <div id="toggle_cnfrpswd" class="form-icon mt-4" onclick="fn_toggle_pswd('ConfirmPassword','toggle_cnfrpswd');"><i class="eye fas fa-eye-slash"></i></div>
                                <small id="confirmPasswordError" style="display: none; color: red"></small>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-success" id="resetPasswordButton" onclick="UpdatePassword('@ViewBag.token')">Reset Password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<!-- FOR BOOTSTRAP -->
<script src="~/js/vendor/jquery-1.12.4.min.js"></script>
<script src="~/js/vendor/popper.min.js"></script>
<script src="~/js/vendor/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        // Show the modal when the page loads
        $('#forgotPasswordModal').modal('show');
    });
</script>
<!-- FOR INTERACTION -->
<script src="~/js/custom/main.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#NewPassword").on('input', function () {
            $('#newPasswordError').text("").hide();
        });

        $("#ConfirmPassword").on('input', function () {
            $('#confirmPasswordError').text("").hide();
        });
    });

    function fn_toggle_pswd(id) {
        if ($("#"+id).attr('type') === 'password')
            $("#"+id).attr('type', 'text');
        else if ($("#" + id).attr('type') === 'text')
        $("#" + id).attr('type', 'password');
        $("#" + id).focus();

    }

    function UpdatePassword(token) {
        //var token = "abc";
        var newPassword = $("#NewPassword").val();
        var confirmPassword = $('#ConfirmPassword').val();
        var newPasswordError = $('#newPasswordError');
        var confirmPasswordError = $('#confirmPasswordError');

        newPasswordError.text("");
        newPasswordError.hide();
        confirmPasswordError.text("");
        confirmPasswordError.hide();

        if (newPassword === "") {
            newPasswordError.text("Please enter your new password");
            newPasswordError.show();
        }
        else if (newPassword.length < 6) {
            newPasswordError.text("Password length should be at least 6 characters");
            newPasswordError.show();
        }
        else if (confirmPassword === "") {
            confirmPasswordError.text("Please confirm your password");
            confirmPasswordError.show();
        }
        else if (confirmPassword !== newPassword) {
            confirmPasswordError.text("Passwords did not match");
            confirmPasswordError.show();
        } else {
            $.ajax({
                url: '@Url.Action("ResetPassword", "Dashboard")',
                type: 'POST',
                data: {newPassword: newPassword, token: token},
                success: function (response) {
                    if (response.message.includes("Success")) {
                        $('#forgotPasswordModal').hide();
                        alert("Password is reset successfully");
                    }
                    else {
                        alert("Unable to reset password at this time");
                    }
                }
            });
        }
    }
    document.getElementById("sendOtpButton").addEventListener("click", function () {

            var UserData = {
                email: document.getElementById("Email").value
            };
            $.ajax({
                url: '@Url.Action("SendOtp", "Dashboard")',
                type: 'POST',
                data: UserData, // Convert email to JSON
                success: function (response) {
                    if (response.success) {
                        // Perform the redirect or handle the response in any way
                        document.getElementById("forgotPasswordModal").style.display = "none";
                        //document.getElementById("otpInputSection").style.display = "block";
                        alert(response.message); // Success message
                    } else {
                        // Handle failure, maybe show an error message to the user
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Error sending OTP.");
                }
            });
        });

        document.getElementById("verifyOtpButton").addEventListener("click", function () {
            var UserData = {
                email: document.getElementById("Email").value,
                otp: document.getElementById("Otp").value
            };
            // Send a POST request to the SendOtp action on the server
            $.ajax({
                url: '@Url.Action("VerifyOtp", "Dashboard")',
                type: 'POST',
                data: UserData, // Convert email to JSON
                success: function (response) {
                    if (response.success) {
                        // Perform the redirect or handle the response in any way
                        document.getElementById("otpInputSection").style.display = "none";
                        document.getElementById("passwordResetSection").style.display = "block";
                        alert("OTP verified! Please reset your password.");
                    } else {
                        // Handle failure, maybe show an error message to the user
                        alert("Invalid OTP. Please try again.");
                    }
                },
                error: function () {
                    alert("Error verifying OTP.");
                }
            });
        });

        document.getElementById("verifyOtpButton").addEventListener("click", function () {
            var UserData = {
                email: document.getElementById("Email").value,
                otp: document.getElementById("Otp").value
            };
            // Send a POST request to the SendOtp action on the server
            $.ajax({
                url: '@Url.Action("VerifyOtp", "Dashboard")',
                type: 'POST',
                data: UserData, // Convert email to JSON
                success: function (response) {
                    if (response.success) {
                        // Perform the redirect or handle the response in any way
                        document.getElementById("otpInputSection").style.display = "none";
                        document.getElementById("passwordResetSection").style.display = "block";
                        alert("OTP verified! Please reset your password.");
                    } else {
                        // Handle failure, maybe show an error message to the user
                        alert("Invalid OTP. Please try again.");
                    }
                },
                error: function () {
                    alert("Error verifying OTP.");
                }
            });
        });
</script>
</html>
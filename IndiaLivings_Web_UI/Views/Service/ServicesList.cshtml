                                            <i class="fas fa-@cat.Image"></i>
                                        </div>
                                        <div class="service-category-content">
                                            <h4>@cat.Name</h4>
                                            <p>@cat.Description</p>
                                            <span class="service-count">@cat.ServiceCount+ services</span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </section>

    <script>
        const categoryData = {
            'home-cleaning': { icon: 'fas fa-home', title: 'Home Cleaning', desc: 'Professional house cleaning services for a spotless home.', services: [ {id:'deep-clean', title:'Deep House Cleaning', price:1299, unit:'per session', duration:180, popularity:5, features:['2-3 Hrs','Eco-friendly','Insured'], provider:'Clean Pro Services', rating:4.8, reviews:245, img:'images/product/01.jpg', providerImg:'images/avatar/01.jpg'}, {id:'kitchen-clean', title:'Kitchen Deep Cleaning', price:649, unit:'per session', duration:120, popularity:4, features:['Degreasing','Appliances','Sanitized'], provider:'Sparkle Crew', rating:4.7, reviews:188, img:'images/product/02.jpg', providerImg:'images/avatar/02.jpg'}, {id:'bathroom-clean', title:'Bathroom Sanitization', price:399, unit:'per bathroom', duration:60, popularity:4, features:['Disinfect','Anti-fungal'], provider:'Hygiene Experts', rating:4.6, reviews:132, img:'images/product/03.jpg', providerImg:'images/avatar/03.jpg'}, {id:'sofa-clean', title:'Sofa & Upholstery', price:799, unit:'per 5 seater', duration:150, popularity:3, features:['Shampoo','Wet Vac'], provider:'Fabric Care', rating:4.5, reviews:98, img:'images/product/04.jpg', providerImg:'images/avatar/04.jpg'} ] },
            'beauty-salon': { icon: 'fas fa-cut', title:'Beauty & Salon', desc:'Hair, makeup, and grooming at your doorstep.', services: [ {id:'hair-style', title:'Hair Cut & Styling', price:299, unit:'per session', duration:60, popularity:5, features:['Certified','Home Visit'], provider:'Bella Beauty', rating:4.9, reviews:324, img:'images/product/03.jpg', providerImg:'images/avatar/03.jpg'}, {id:'makeup', title:'Makeup & Grooming', price:1499, unit:'starting', duration:180, popularity:4, features:['Bridal','Premium'], provider:'Glam Squad', rating:4.8, reviews:210, img:'images/product/05.jpg', providerImg:'images/avatar/02.jpg'}, {id:'spa', title:'Spa & Massage', price:999, unit:'per session', duration:90, popularity:4, features:['Relaxing','Therapeutic'], provider:'Relax Spa', rating:4.8, reviews:287, img:'images/product/06.jpg', providerImg:'images/avatar/04.jpg'} ] },
            'ac-appliance': { icon: 'fas fa-wrench', title:'AC & Appliance', desc:'Installation, repair, and maintenance services.', services: [ {id:'ac-repair', title:'AC Repair & Service', price:799, unit:'per service', duration:90, popularity:5, features:['Licensed','Guarantee'], provider:'Cool Tech', rating:4.5, reviews:156, img:'images/product/04.jpg', providerImg:'images/avatar/04.jpg'}, {id:'tv-repair', title:'TV Installation & Repair', price:399, unit:'starting', duration:60, popularity:4, features:['Wall Mount','Setup'], provider:'Fix It Fast', rating:4.6, reviews:189, img:'images/product/02.jpg', providerImg:'images/avatar/02.jpg'} ] },
            'home-repair': { icon: 'fas fa-tools', title:'Home Repair', desc:'Plumbing, electrical, carpentry and more.', services: [ {id:'plumbing', title:'Plumbing Repair', price:599, unit:'per hour', duration:60, popularity:5, features:['Emergency','Warranty'], provider:'Fix It Fast', rating:4.6, reviews:189, img:'images/product/02.jpg', providerImg:'images/avatar/02.jpg'}, {id:'electrical', title:'Electrical Work', price:399, unit:'per hour', duration:60, popularity:4, features:['Licensed','Safety'], provider:'Volt Masters', rating:4.7, reviews:142, img:'images/product/05.jpg', providerImg:'images/avatar/01.jpg'}, {id:'painting', title:'Interior Painting', price:45, unit:'per sq ft', duration:480, popularity:4, features:['Premium Paint','Clean Work'], provider:'Perfect Paint', rating:4.7, reviews:201, img:'images/product/05.jpg', providerImg:'images/avatar/01.jpg'} ] }
        };
        function getParam(name)
        {
            const url=new URL(window.location.href);return url.searchParams.get(name);
        }
        function formatPrice(p)
        {   
            return '₹'+p.toLocaleString();
        }
        function renderCategory(catKey)
        { 
            const data = categoryData[catKey]; 
            const header = document.getElementById('categoryHeader'); 
            const filterBar = document.getElementById('filterBar'); 
            if(!data)
            {
                header.style.display='none';
                document.getElementById('emptyState').style.display='block';
                return;
            } 
            header.style.display='flex';
            filterBar.style.display='flex'; 
            document.getElementById('categoryIcon').innerHTML = `<i class="${data.icon}"></i>`; 
            document.getElementById('categoryTitle').textContent = data.title; 
            document.getElementById('categoryDesc').textContent = data.desc; 
            document.getElementById('bannerCategory').textContent = data.title; 
            document.getElementById('breadcrumbCategory').textContent = data.title; 
            document.getElementById('serviceCount').textContent = `${data.services.length} services`; 
            const row = document.getElementById('servicesRow'); 
            const searchTerm = document.getElementById('searchInput').value.toLowerCase(); 
            const sortValue = document.getElementById('sortSelect').value; 
            const durationFilter = document.getElementById('durationSelect').value; 
            let services = [...data.services]; services = services.filter(s => s.title.toLowerCase().includes(searchTerm) || (s.features||[]).join(' ').toLowerCase().includes(searchTerm)); 
            if(durationFilter)
            { 
                services = services.filter(s => { if(durationFilter==='short') return s.duration <= 60; if(durationFilter==='medium') return s.duration > 60 && s.duration <= 120; if(durationFilter==='long') return s.duration > 120; return true; }); 
            } 
            if(sortValue==='priceAsc') services.sort((a,b)=>a.price-b.price); 
            else if(sortValue==='priceDesc') services.sort((a,b)=>b.price-a.price); 
            else if(sortValue==='duration') services.sort((a,b)=>a.duration-b.duration); 
            else if(sortValue==='popular') services.sort((a,b)=>b.popularity-a.popularity); row.innerHTML=''; 
            if(services.length===0)
            {
                document.getElementById('emptyState').style.display='block';
                return;
            } 
            else 
            {
                document.getElementById('emptyState').style.display='none';
            } 
            services.forEach(s => { const col = document.createElement('div'); 
            col.className='col-sm-6 col-lg-4'; 
            col.innerHTML = ` <div class="subcategory-service-card" data-id="${s.id}"> <div class="thumb">${s.img?`<img src="${s.img}" alt="${s.title}" onerror="this.style.display='none';this.parentElement.innerHTML='<i class=\\'fas fa-image\\'></i>'">`:`<i class='fas fa-image'></i>`}</div> <div class="content"> <div class="provider-mini"> <img src="${s.providerImg}" alt="${s.provider}" onerror="this.style.display='none'"> <div> <strong style="font-size:13px;">${s.provider}</strong> <div class="rating">${'<i class=\'fas fa-star\'></i>'.repeat(Math.round(s.rating))} <span style="color:#666;margin-left:4px;font-size:11px;">${s.rating.toFixed(1)} (${s.reviews})</span></div> </div> </div> <h4><a href="ServiceDetails" style="color:inherit;text-decoration:none;">${s.title}</a></h4> <p class="desc">${s.desc || ''}</p> <div class="features">${(s.features||[]).map(f=>`<span>${f}</span>`).join('')}</div> <div class="meta"> <div class="price">${formatPrice(s.price)}<small>${s.unit}</small></div> <button class="quick-book-btn" data-service='${JSON.stringify(s).replace(/'/g,"&apos;")}'><i class="fas fa-bolt"></i>Book</button> </div> </div> </div>`; row.appendChild(col); }); 
            row.querySelectorAll('.quick-book-btn').forEach(btn=>btn.addEventListener('click',e=>openBooking(JSON.parse(e.currentTarget.getAttribute('data-service').replace(/&apos;/g,"'")),catKey))); 
        }

        function openBooking(service)
        { 
            document.getElementById('bookingServiceId').value = service.id; document.getElementById('bookingServiceTitle').textContent = 'Book: '+service.title; document.getElementById('bookingPriceDisplay').textContent = formatPrice(service.price)+' '+service.unit; document.getElementById('viewDetailsLink').href = 'ServiceDetails'; const today = new Date().toISOString().split('T')[0]; document.getElementById('bookingDate').min = today; document.getElementById('bookingDate').value = today; $('#bookingModal').modal('show'); 
        }

        document.getElementById('bookingForm').addEventListener('submit', function(e){
            e.preventDefault(); alert('Booking confirmed for '+document.getElementById('bookingServiceTitle').textContent+' on '+document.getElementById('bookingDate').value); $('#bookingModal').modal('hide'); this.reset(); 
        });

        ['searchInput','sortSelect','durationSelect'].forEach(id=>{ document.getElementById(id).addEventListener('input', ()=>renderCategory(currentCategory)); 
        
        document.getElementById(id).addEventListener('change', ()=>renderCategory(currentCategory)); });
        const currentCategory = @Model[0].CategoryName;
        if(currentCategory)
        {
            renderCategory(currentCategory);
        } 
        else 
        {
            document.getElementById('emptyState').style.display='block';
            document.getElementById('emptyState').innerHTML='<i class="fas fa-info-circle"></i><h3>No category selected</h3><p><a href=\'ServicesList\'>Return to services</a></p>';
        }
    </script>
    <script>
            $(document).ready(function () {
                $.ajax({
                    url: '/User/GetCountryName',
                    type: 'GET',
                    success: function (response) {
                        if (typeof response === "string") {
                            response = JSON.parse(response);
                        }

                        const countries = response
                            .filter(c => c && c.strCountryName)
                            .sort((a, b) => a.strCountryName.localeCompare(b.strCountryName));

                        let $dropdown = $('#countriesDropdown');
                        $dropdown.empty();

                        $dropdown.append('<option value="">Please select your country</option>');

                        countries.forEach(function (country) {
                            $dropdown.append(
                                $('<option></option>')
                                    .val(country.intCountryID)
                                    .text(country.strCountryName)
                            );
                        });
                        const selectedCountry = "India".trim();
                        if (selectedCountry) {
                            let matchedOption = $dropdown.find('option').filter(function () {
                                return $(this).text().trim() === selectedCountry;
                            }).first();
                            if (matchedOption.length) {
                                $dropdown.val(matchedOption.val()).trigger('change');
                            }
                        } else {
                            // Default to "Please select your country"
                            $dropdown.val("").trigger('change');
                        }

                        $dropdown.select2({
                            placeholder: "Select a country",
                            allowClear: true
                        });
                    },
                    error: function () {
                        alert('Failed to load countries');
                    }
                });

            $('#countriesDropdown').on('change', function () {
                const selectedCountryId = $(this).val();
                if (selectedCountryId) {
                    $.ajax({
                        url: '/Dashboard/GetStates',
                        type: 'GET',
                        data: {countryId: selectedCountryId},
                        success: function (states) {
                            if (typeof states === "string") {
                                states = JSON.parse(states);
                            }


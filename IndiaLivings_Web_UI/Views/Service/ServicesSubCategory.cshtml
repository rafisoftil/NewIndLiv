@model List<ServicesSubCategoriesViewModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .category-services-part {
            padding: 60px 0;
            background: #f8f9fa;
        }

        .category-services-header {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,.08);
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 25px;
        }

            .category-services-header .icon {
                width: 80px;
                height: 80px;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 36px;
                color: #fff;
                background: linear-gradient(135deg,#007bff,#0056b3);
            }

            .category-services-header h1 {
                margin: 0 0 10px 0;
                font-size: 28px;
                font-weight: 700;
            }

            .category-services-header p {
                margin: 0;
                color: #666;
            }

        .subcategory-service-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,.08);
            transition: .3s;
            margin-bottom: 30px;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

            .subcategory-service-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0,0,0,.15);
            }

            .subcategory-service-card .thumb {
                height: 180px;
                overflow: hidden;
                position: relative;
                background: #f0f0f0;
                display: flex;
                align-items: center;
                justify-content: center;
                color: #999;
                font-size: 40px;
            }

            .subcategory-service-card img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            .subcategory-service-card .content {
                padding: 22px;
                display: flex;
                flex-direction: column;
                flex-grow: 1;
            }

            .subcategory-service-card h4 {
                font-size: 20px;
                font-weight: 600;
                margin: 0 0 10px 0;
            }

            .subcategory-service-card p.desc {
                flex-grow: 1;
                color: #666;
                font-size: 14px;
                line-height: 1.55;
                margin: 0 0 15px 0;
            }

            .subcategory-service-card .features {
                display: flex;
                flex-wrap: wrap;
                gap: 8px;
                margin-bottom: 15px;
            }

                .subcategory-service-card .features span {
                    background: #f0f8ff;
                    color: #007bff;
                    font-size: 11px;
                    padding: 4px 8px;
                    border-radius: 12px;
                    font-weight: 600;
                }

            .subcategory-service-card .meta {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-top: auto;
            }

            .subcategory-service-card .price {
                font-size: 22px;
                font-weight: 700;
                color: #007bff;
                display: flex;
                flex-direction: column;
                line-height: 1;
            }

                .subcategory-service-card .price small {
                    font-size: 11px;
                    color: #666;
                    font-weight: 500;
                }

        .quick-book-btn {
            background: #007bff;
            border: none;
            color: #fff;
            padding: 10px 18px;
            border-radius: 8px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            text-decoration: none;
        }

            .quick-book-btn:hover {
                background: #0056b3;
                color: #fff;
                text-decoration: none;
            }

        .provider-mini {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 12px;
        }

            .provider-mini img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                object-fit: cover;
            }

            .provider-mini .rating {
                font-size: 11px;
                gap: 2px;
            }

        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,.08);
        }

            .empty-state i {
                font-size: 60px;
                margin-bottom: 20px;
                color: #007bff;
                opacity: .3;
            }

        .filter-bar {
            background: white;
            border-radius: 12px;
            padding: 15px 20px;
            margin-bottom: 25px;
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            align-items: center;
            box-shadow: 0 5px 15px rgba(0,0,0,.05);
        }

            .filter-bar select, .filter-bar input {
                border: 2px solid #e0e0e0;
                border-radius: 8px;
                padding: 8px 12px;
                font-size: 14px;
            }

                .filter-bar select:focus, .filter-bar input:focus {
                    outline: none;
                    border-color: #007bff;
                }

        .booking-modal .modal-header {
            border-bottom: none;
            padding-bottom: 0;
        }

        .booking-modal .modal-footer {
            border-top: none;
        }

        .price-badge {
            background: #e3f2fd;
            color: #007bff;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 11px;
            font-weight: 600;
            margin-left: 8px;
        }
        .category-services-header{
            padding: 20px;
            text-align: center;
            justify-content: center;
        }

        .category-services-header .icon {
            margin-bottom: 10px;
        }

        .filter-bar {
            flex-direction: column;
            align-items: stretch;
        }

        .subcategory-service-card .meta {
            flex-direction: column;
            align-items: flex-start;
            gap: 10px;
        }
    </style>
</head>
<body>
    <section class="single-banner">
        <div class="container">
            <div class="row"><div class="col-lg-12"><div class="single-content"><h2 id="bannerCategory">Category Services</h2><ol class="breadcrumb"><li class="breadcrumb-item"><a href="index.html">Home</a></li><li class="breadcrumb-item"><a href="ServicesList">Services</a></li><li class="breadcrumb-item active" id="breadcrumbCategory" aria-current="page">Category</li></ol></div></div></div>
        </div>
    </section>
    <section class="category-services-part">
        <div class="container">
            <div class="row mb-3">
                <div class="col-md-8">
                    <div id="categoryHeader" class="category-services-header">
                        <div class="icon" id="categoryIcon"><i class="fas fa-tag"></i></div>
                        <div class="info">
                            @if (Model != null && Model.Count > 0)
                            {
                                <h1 id="categoryTitle">@Model[0].CategoryName</h1>
                                <p id="categoryDesc">@Model[0].Description</p>
                            }
                            else
                            {
                                <h1 id="categoryTitle">No services found</h1>
                                <p id="categoryDesc">There are no subcategories available for this category.</p>
                            }
                        </div>
                        <div class="ml-auto d-flex flex-column gap-2" style="gap:10px;">
                            <div><span class="service-count" id="serviceCount">@Model.Count()+ services</span></div>
                            <div><a href="ServicesList" id="backAll" class="btn btn-inline" style="padding:10px 18px;display:inline-flex;align-items:center;gap:6px;"><i class="fas fa-arrow-left"></i><span>All Categories</span></a></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="filter-bar" id="filterBar">
                        <input type="text" id="searchInput" placeholder="Search within this category">
                        <select id="sortSelect">
                            <option value="popular">Most Popular</option>
                            <option value="priceAsc">Price: Low to High</option>
                            <option value="priceDesc">Price: High to Low</option>
                            <option value="duration">Shortest Duration</option>
                        </select>
                        <select id="durationSelect">
                            <option value="">All Durations</option>
                            <option value="short">Up to 1 hr</option>
                            <option value="medium">1-2 hrs</option>
                            <option value="long">2+ hrs</option>
                        </select>
                    </div>
                </div>
                <div>

                </div>
            </div>
            <div id="servicesRow" class="row"></div>
            <div id="emptyState" class="empty-state" style="display:none;">
                <i class="fas fa-folder-open"></i>
                <h3>No services found</h3>
                <p>Try adjusting your search or filters.</p>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row">
                @* Render subcategory cards using Razor only, not JS template literals *@
                @foreach (var sub in Model)
                {
                    <div class="col-sm-6 col-lg-4">
                        <div class="service-category-card" data-id="@sub.ServiceId">
                            <div class="thumb">
                                @if (!string.IsNullOrEmpty(sub.Description))
                                {
                                    <img src="/images/product/00.jpg" alt="@sub.CategoryName" onerror="this.style.display='none';this.parentElement.innerHTML='<i class=\'fas fa-image\'></i>'" />
                                }
                                else
                                {
                                    <i class="fas fa-image"></i>
                                }
                            </div>
                            <div class="content">
                                <div class="provider-mini">
                                    <img src="~/images/avatar/01.jpg" alt="Provider" onerror="this.style.display='none'" />
                                    <div>
                                        <strong style="font-size:13px;">Provider Name</strong>
                                        <div class="rating">
                                            <i class="fas fa-star"></i>
                                            <span style="color:#666;margin-left:4px;font-size:11px;">4.8 (245)</span>
                                        </div>
                                    </div>
                                </div>
                                <h4><a href="ServiceDetails" style="color:inherit;text-decoration:none;">@sub.Name</a></h4>
                                <p class="desc">@sub.Description</p>
                                <div class="features">
                                    <span>@sub.DurationMin min</span>
                                    <span>@sub.ProviderCount providers</span>
                                </div>
                                <div class="meta">
                                    <div class="price">₹@sub.BasePrice<small> per service</small></div>
                                    @* Razor version: Pass service info as data attributes for JS *@
                                    <button class="quick-book-btn"
                                            data-serviceid="@sub.ServiceId"
                                            data-categoryname="@sub.CategoryName"
                                            data-description="@sub.Description"
                                            data-baseprice="@sub.BasePrice"
                                            data-durationmin="@sub.DurationMin"
                                            data-providercount="@sub.ProviderCount">
                                        <i class="fas fa-bolt"></i>Book
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
